void nStarTriangle(int n) {
    
	for(int i=n;i>0;i++)
	{
		for(int j=0;j<n;j++)
		{
			cout<<" ";
            //cout<<endl;
		}
        for(int j=0;j<i*2+1;j++)
		{
			cout<<"*";
            //cout<<endl;
		}

        for(int j=0;j<n;j++)
		{
			cout<<" ";
            //cout<<endl;
		}
		cout<<endl;
	}
}
