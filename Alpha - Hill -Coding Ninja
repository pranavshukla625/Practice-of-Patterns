void alphaHill(int n) {
    // Write your code here.
    char ch=65;
    for(int i=0;i<n;i++)
    {
        for(int j=0;j<n-i-1;j++)
        {
            cout<<"  ";
        }
        for(int j=0;j<i*2+1;j++)
        {
            cout<<ch<<" ";
            if(j>=i)
            ch--;
            else
            ch++;
            
        }
        for(int j=0;j<n-i-1;j++)
        {
            cout<<" ";
        }
        cout<<endl;;
        ch=65;
    }
}
