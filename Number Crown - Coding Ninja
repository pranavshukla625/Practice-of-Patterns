void numberCrown(int n) {
    // Write your code here.
    int count=1;
    for(int i=0;i<n;i++)
    {
        for(int j=0;j<=i;j++)
        {
            cout<<count<<" ";
            count++;
        }
        for(int j=0;j<n-2*i+1;j++)
        {
            cout<<"  ";
        }
         for(int j=0;j<=i;j++)
        {
            cout<<--count<<" ";
           // count--;
        }
        cout<<endl;
        count=1;
    }
}
